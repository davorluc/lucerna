---
import Background from "./Background.astro";
import InfiniteScroll from "./InfiniteScroll.astro";
---

<section
  id="hero"
  class="md:min-h-screen relative flex flex-col overflow-hidden bg-[#FCF9EA] justify-start md:justify-center items-start py-50 px-10 md:p-30"
>
  <div class="max-w-[1600px] relative mx-auto">
    <div
      class="absolute md:right-[20%] md:top-[35%] w-full md:w-[50%] h-full overflow-visible"
    >
      <InfiniteScroll
        isTilted={true}
        tiltDirection="right"
        autoplay={true}
        autoplaySpeed={0.8}
        autoplayDirection="up"
        pauseOnHover={false}
        class="overflow-visible"
      >
        {
          [
            "01 — SIGNAL ENTRY",
            "02 — DATA INGESTION",
            "03 — LUCERNA DIALOGUE",
            "04 — SEMANTIC MEMORY",
            "05 — PATTERN SYNTHESIS",
            "06 — AXIAL METRICS",
            "07 — VISUAL OUTPUT",
            "08 — DECISION SURFACE",
            "09 — LEARNING CYCLE",
          ].map((label) => (
            <div
              class="system-card flex items-center justify-center text-xs md:text-sm font-medium uppercase tracking-[0.15em]
               border border-[#252525]/30 rounded-xl h-[120px] md:h-[150px] w-[85%] mx-auto 
               text-[#252525]/80 backdrop-blur-sm relative overflow-hidden"
            >
              <span class="relative z-10">{label}</span>
              <span class="absolute inset-0 bg-gradient-to-br from-transparent via-white/5 to-transparent opacity-0 transition-opacity duration-500" />
            </div>
          ))
        }
      </InfiniteScroll>
    </div>

    <div class="container w-full text-left z-3 relative">
      <h1
        class="text-5xl md:text-[92px] font-display text-[#252525] font-bold mb-6"
      >
        Illuminate Your Hiring Decisions
      </h1>
      <p class="text-xl md:text-3xl mb-10 max-w-2xl text-[#252525]">
        Lucerna combines AI insight with Swiss precision to make recruiting
        smarter, fairer, and faster.
      </p>
      <div class="flex flex-col sm:flex-row justify-start gap-4">
        <a
          href="#waitlist"
          class="bg-[#2c2e37] leading-[1.2] hover:bg-[#FBF3D1] text-[#eaeaea] hover:text-[#252525] font-medium py-3 px-8 rounded-full transition duration-300 border-2 border-[#00000000] hover:border-2 hover:border-[#252525] text-center"
          >Join the Waitlist</a
        >
        <a
          href="#how-it-works"
          class="leading-[1.2] bg-[#FCF9EA00] text-[#252525] hover:bg-[#FBF3D1] hover:text-[#252525] hover:border-2 hover:border-[#252525] border-2 border-[#00000000] font-medium py-3 px-8 rounded-full transition duration-300 text-center"
          >Learn how it works</a
        >
      </div>
      <p class="mt-16 text-[#252525] text-center md:text-left">
        From St. Gallen, Switzerland
      </p>
    </div>
  </div>
</section>

<style>
  .system-card {
    background: radial-gradient(
      circle at 30% 30%,
      rgba(255, 255, 255, 0.05),
      transparent 70%
    );
    transition:
      transforn 0.4s ease,
      color 0.4s ease,
      border-color 0.4s ease;
  }

  .system-card:hover {
    color: #000;
    border-color: rgba(0, 0, 0, 0.4);
    transform: scale(1.03) translateY(-4px);
  }

  .system-card:hover span:last-child {
    opacity: 1;
  }
</style>
