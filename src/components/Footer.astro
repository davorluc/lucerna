---
import Background from "./Background.astro";
---

<footer class="relative">
  <div class="z-3 absolute w-full h-full top-0 left-0 glass"></div>
  <Background
    mouseInteraction={false}
    class="w-full h-full absolute z-2 top-0 left-0"
  />
  <div class="relative z-5 footer-content">
    <div class="logo text-[#252525]">
      <i data-feather="sun" class="text-[#252525] logo-icon"></i>
      Lucerna
    </div>
    <p class="copyright">
      © Lucerna AG, St. Gallen — Illuminating Hiring Decisions.
    </p>
    <div class="links">
      <a href="#">Privacy Policy</a>
      <a href="#">Terms of Use</a>
    </div>
    <div class="location">
      <i data-feather="map-pin"></i>
      St. Gallen, Switzerland
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: #1b1b1b;
    padding: 3rem 1.5rem;
    text-align: center;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .logo {
    font-family: "Space Grotesk", sans-serif;
    font-weight: 700;
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
  }

  .logo-icon {
    color: #1e90ff;
    margin-right: 0.5rem;
  }

  .copyright {
    color: #252525;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .links {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
    z-index: 200000;
  }

  .links a {
    color: #252525;
    text-decoration: none;
    font-size: 0.9rem;
    transition: text-decoration 0.2s;
  }

  .links a:hover {
    text-decoration: underline;
  }

  .location {
    color: #252525;
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .location i {
    margin-right: 0.5rem;
  }
  .glass {
    /* From https://css.glass */
    background: rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(11.8px);
    -webkit-backdrop-filter: blur(11.8px);
    pointer-events: none;
  }
</style>
