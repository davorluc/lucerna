---
const {
  icon = "check",
  title = "Feature",
  description = "Description not provided",
} = Astro.props;
---

<div class="card">
  <div class="icon-container">
    <i data-feather="{icon}"></i>
  </div>
  <h3 class="title">{title}</h3>
  <p class="description">{description}</p>
</div>

<style>
  .card {
    background-color: #fdfcf8;
    border: 1px solid #eaeaea;
    border-radius: 12px;
    padding: 1.5rem;
    height: 100%;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
  }

  .icon-container {
    width: 40px;
    height: 40px;
    background-color: #ffb100;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .icon-container i {
    color: #1b1b1b;
  }

  .title {
    font-weight: 600;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: #1b1b1b;
  }

  .description {
    color: #666666;
    font-size: 0.95rem;
    line-height: 1.5;
  }
</style>
