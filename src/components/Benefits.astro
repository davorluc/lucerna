<style>
  .tab-button.active {
    background-color: #2c2e37;
    color: white;
  }
</style>

<script>
  import { gsap } from "gsap";

  const recruiterTab = document.getElementById("recruiter-tab");
  const candidateTab = document.getElementById("candidate-tab");
  const recruiterPanel = document.getElementById("recruiter-panel");
  const candidatePanel = document.getElementById("candidate-panel");

  function switchTabs(activeTab, inactiveTab, activePanel, inactivePanel) {
    activeTab.classList.add("active");
    inactiveTab.classList.remove("active");

    gsap.to(inactivePanel, {
      opacity: 0,
      duration: 0.3,
      pointerEvents: "none",
    });
    gsap.to(activePanel, {
      opacity: 1,
      duration: 0.3,
      pointerEvents: "auto",
    });
  }

  recruiterTab.addEventListener("click", () => {
    switchTabs(recruiterTab, candidateTab, recruiterPanel, candidatePanel);
  });

  candidateTab.addEventListener("click", () => {
    switchTabs(candidateTab, recruiterTab, candidatePanel, recruiterPanel);
  });
</script>
